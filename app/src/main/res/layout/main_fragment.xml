<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MainFragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/Manualswitch" />

    <Button
        android:id="@+id/PairedDevicesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Paired"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/DevicesListView"
        android:layout_width="283dp"
        android:layout_height="91dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="24dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/BTTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="BT status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/IncreaseSpeedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="45dp"
        android:text="Faster"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PairedDevicesButton" />

    <Button
        android:id="@+id/DecreaseSpeedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Slower"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IncreaseSpeedButton" />

    <Button
        android:id="@+id/LeftButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="120dp"
        android:text="Left"
        app:layout_constraintEnd_toStartOf="@+id/RightButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/RightButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="16dp"
        android:text="Right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/CenterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="16dp"
        android:text="Center"
        app:layout_constraintEnd_toStartOf="@+id/RightButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/StopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Stop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DecreaseSpeedButton" />

    <TextView
        android:id="@+id/SpeedTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="20dp"
        android:text="Speed:"
        app:layout_constraintEnd_toStartOf="@+id/SpeedValueTextView"
        app:layout_constraintTop_toBottomOf="@+id/AngleTitle" />

    <TextView
        android:id="@+id/AngleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:text="Angle:"
        app:layout_constraintEnd_toStartOf="@+id/AngleValueTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/AngleValueTextView"
        android:layout_width="35dp"
        android:layout_height="19dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="196dp"
        android:text="90"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/SpeedValueTextView"
        android:layout_width="28dp"
        android:layout_height="21dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="204dp"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AngleValueTextView" />

    <TextView
        android:id="@+id/VersionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/PtextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginTop="24dp"
        android:text="Pitch:"
        app:layout_constraintStart_toEndOf="@+id/DevicesListView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/RtextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginTop="6dp"
        android:text="Roll:"
        app:layout_constraintStart_toEndOf="@+id/DevicesListView"
        app:layout_constraintTop_toBottomOf="@+id/PtextView" />

    <TextView
        android:id="@+id/PitchValuetextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/PtextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/RollValuetextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="6dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/RtextView"
        app:layout_constraintTop_toBottomOf="@+id/PitchValuetextView" />

    <Switch
        android:id="@+id/Manualswitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="18dp"
        android:checked="true"
        android:showText="true"
        android:text="Manual: "
        app:layout_constraintBottom_toTopOf="@+id/messageTextView"
        app:layout_constraintEnd_toEndOf="parent"
        tools:checked="true" />

    <RelativeLayout
        android:id="@+id/RLayout"
        android:layout_width="33dp"
        android:layout_height="41dp"
        android:layout_marginStart="144dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/Manualswitch"
        app:layout_constraintStart_toEndOf="@+id/DecreaseSpeedButton">

    </RelativeLayout>

    <ImageView
        android:id="@+id/TestimageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="138dp"
        android:layout_marginTop="91dp"
        android:src="@android:drawable/ic_menu_directions"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/StopButton"
        app:layout_constraintTop_toBottomOf="@+id/DevicesListView"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/TrimUpImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="135dp"
        android:clickable="true"
        android:src="@android:drawable/arrow_up_float"
        app:layout_constraintStart_toEndOf="@+id/IncreaseSpeedButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/TrimDownImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="120dp"
        android:clickable="true"
        android:src="@android:drawable/arrow_down_float"
        app:layout_constraintStart_toEndOf="@+id/StopButton"
        app:layout_constraintTop_toBottomOf="@+id/TrimUpImageView" />

    <TextView
        android:id="@+id/SpeedTrimTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="48dp"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/DecreaseSpeedButton"
        app:layout_constraintTop_toBottomOf="@+id/TrimUpImageView" />

    <ImageView
        android:id="@+id/RightTrimImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="15dp"
        android:rotation="90"
        android:src="@android:drawable/arrow_up_float"
        app:layout_constraintBottom_toTopOf="@+id/RightButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/LeftTrimImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="185dp"
        android:layout_marginBottom="15dp"
        android:rotation="270"
        android:src="@android:drawable/arrow_up_float"
        app:layout_constraintBottom_toTopOf="@+id/LeftButton"
        app:layout_constraintEnd_toStartOf="@+id/RightTrimImageView" />

    <TextView
        android:id="@+id/AngleTrimTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="13dp"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/CenterButton"
        app:layout_constraintEnd_toStartOf="@+id/RightTrimImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>
